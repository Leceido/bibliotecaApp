<h2>Lista de generos</h2>
<hr>
<a href="/admin/livro/genero/cadastrar"><button class="btn btn-primary">Cadastrar genero</button></a>

{{#each generos}}
    <div class="card mt-4">
        <div class="card-body">
            <a href="/admin/livro/genero/{{slug}}"><h4>{{nome}}</h4></a>
            <small>Slug: {{slug}}</small>
            <br>
            <small>Data de criaÃ§ao: {{date}}</small><br>
            <a href="/admin/livro/genero/edit/{{_id}}"><button class="btn btn-primary">Editar genero</button></a>
            <form action="/admin/livro/genero/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-1">Deletar</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhum genero cadastrado</h4>
{{/each}}