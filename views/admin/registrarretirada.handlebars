{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h1>Registrar retirada</h1>

<form action="/admin/livro/retirar" method="post">
    <div class="card">
        <div class="card-body">
            <label for="livro">Livro: </label>
                <select name="livro" id="" class="form-select form-select-sm mb-3">
                    {{#each livros}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhum livro cadastrado na base de dados</option>
                    {{/each}}
                </select>
            <label for="pessoa">Pessoa que vai retirar: </label>
                <select name="pessoa" id="" class="form-select form-select-sm mb-3">
                    {{#each usuarios}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhum usuario cadastrado</option>
                    {{/each}}
                </select>
            <label for="entrega">Previsao de entrega: </label>
                <input type="date" name="entrega" id="" class="form-control" max="2022-12-31">
            <button class="btn btn-primary mt-4">Criar registro</button>
        </div>
    </div>
</form>