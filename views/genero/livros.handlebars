<h1>{{genero.nome}}</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
      {{#each livros}}
        <div class="col">
          <div class="card h-100">
            <div class="centralizar-img">
              <img src="/img/{{slug}}.webp" class="card-img-top imgs" alt="...">
            </div>
            <div class="card-body">
              <h5 class="card-title">{{nome}}</h5>
              <div class="sinopse-card">
                <p class="">{{sinopse}}</p>
              </div>
              {{#if disponibilidade}}
                <small style="font-weight: bold;">Livro disponivel para retirada</small>
              {{else}}
                <small style="font-weight: bold;">Livro ja retirado</small>
              {{/if}}
            </div>
          </div>
        </div>
      {{else}}

      {{/each}}
  </div>